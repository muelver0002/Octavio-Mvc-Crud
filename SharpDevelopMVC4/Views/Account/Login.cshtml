@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1><br>
@if(ViewBag.Authenticated == false)
{

<form action="/account/login" method="post">

<div class="container">
<div class="col"></div>
<input type="text" name="name"  class="form-control" placeholder="User name" required><br>

<input type="password" name="pass"  class="form-control" placeholder="Enter password" required><br>
</div>

<div class="container">
<div class="row">

<div class="col-md-4">
<button type="submit" class="btn btn-primary btn-lg " class="form-control">Login</button>
</div>

<div class="col-md-8">
<button type="reset" class="btn btn-primary btn-lg " class="form-control">Clear</button>
</div>

</div>

</div>


<p style="color: red;">
@ViewBag.message
</p>

</form>

}
